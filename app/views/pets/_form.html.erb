<%= form_for @pet do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :species %>
    <%= f.select :species, Pet::SPECIES, class: "form-control" %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<hr>

<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :found_on %>
  <%= f.input :age %>
  <%= f.input :species, collection: Pet::SPECIES %>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>
