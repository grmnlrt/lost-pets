<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h1 class="my-5 text-center">All pets</h1>

      <ul>
        <% @pets.each do |pet| %>
          <li><%= link_to pet.name, pet_path(pet) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
